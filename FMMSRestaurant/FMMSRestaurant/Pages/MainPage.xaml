<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:FMMSRestaurant.Converters"
             x:Class="FMMSRestaurant.Pages.MainPage"
             BackgroundColor="#212121"
             Padding="0">
    <ContentPage.Resources>
        <converters:NotConverter x:Key="NotConverter" />
    </ContentPage.Resources>
    <Grid RowDefinitions="*" ColumnDefinitions="200,*,200" Margin="0">
        <!-- Left Panel (Navigation) -->
        <VerticalStackLayout Grid.Column="0" BackgroundColor="#FAF1E6" Padding="10" IsEnabled="{Binding IsFormSubmitted}">
            <VerticalStackLayout BackgroundColor="#D32F2F" Padding="10" Margin="0,0,0,10">
                <Label Text="FM" TextColor="#FFFFFF" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />
            </VerticalStackLayout>
            <Button Text="Home / User Entry" Clicked="OnHomeClicked" BackgroundColor="#E0E0E0" TextColor="#000000" Padding="10" Margin="0,5" IsVisible="{Binding IsFormSubmitted, Converter={StaticResource NotConverter}}" />
            <Button Text="Menu" Clicked="OnMenuClicked" TextColor="#000000" Padding="10" Margin="0,5" />
            <Button Text="Table" Clicked="OnTableClicked" TextColor="#000000" Padding="10" Margin="0,5" />
            <Button Text="Order" Clicked="OnOrderClicked" TextColor="#000000" Padding="10" Margin="0,5" />
            <Button Text="Staff See All Orders" Clicked="OnStaffOrdersClicked" TextColor="#000000" Padding="10" Margin="0,5" />
        </VerticalStackLayout>

        <!-- Main Content (Welcome Form) -->
        <Grid x:Name="MainContentGrid" Grid.Column="1" BackgroundColor="#212121">
            <ContentView Padding="20">
                <VerticalStackLayout Spacing="10" VerticalOptions="Center" HorizontalOptions="Center">
                    <Label Text="Welcome to FMMS Restaurant" TextColor="#FFFFFF" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />
                    <Label Text="Please enter your details to continue." TextColor="#999999" HorizontalOptions="Center" />
                    <Entry x:Name="FullNameEntry" Placeholder="Enter your full name" TextColor="#FFFFFF" BackgroundColor="#333333" Margin="0,10" />
                    <Label x:Name="FullNameError" Text="Full name is required." TextColor="#FF4444" IsVisible="False" />
                    <CheckBox x:Name="PhoneCheckBox" Color="#FF4444" CheckedChanged="OnPhoneCheckBoxChanged" />
                    <Label Text="Provide Phone Number? (Optional)" TextColor="#FF4444" />
                    <Entry x:Name="PhoneEntry" Placeholder="+966 5XXXXXXXX" TextColor="#FFFFFF" BackgroundColor="#333333" IsEnabled="False" IsVisible="False" Margin="0,10" />
                    <Label x:Name="PhoneError" Text="Phone number must start with 5 and be 9 digits long." TextColor="#FF4444" IsVisible="False" />
                    <Button x:Name="ContinueButton" Text="Continue" BackgroundColor="#D32F2F" TextColor="#FFFFFF" Clicked="OnContinueClicked" />
                </VerticalStackLayout>
            </ContentView>
        </Grid>

        <!-- Right Panel (Order Summary) -->
        <VerticalStackLayout Grid.Column="2" BackgroundColor="#FAF1E6" Padding="10" IsEnabled="{Binding IsFormSubmitted, Converter={StaticResource NotConverter}}">
            <Label Text="Current Order" TextColor="#D32F2F" FontSize="18" FontAttributes="Bold" />
            <Label Text="Your order is empty." TextColor="#666666" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>