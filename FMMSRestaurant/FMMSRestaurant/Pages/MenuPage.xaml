<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FMMSRestaurant.Pages.MenuPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:FMMSRestaurant.ViewModels"
    xmlns:models="clr-namespace:FMMSRestaurant.Models"
    xmlns:converters="clr-namespace:FMMSRestaurant.Converters"
    x:DataType="vm:MenuPageViewModel"
    Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <converters:NotConverter x:Key="NotConverter" />
    </ContentPage.Resources>

    <Grid ColumnDefinitions="200,*,250">
        <!-- Left Sidebar -->
        <VerticalStackLayout
            Grid.Column="0"
            BackgroundColor="#212121"
            IsEnabled="{Binding Source={x:Static Application.Current}, Path=IsFormSubmitted}"
            Padding="10"
            Spacing="10">
            <Button
                Text="Home / User Entry"
                IsVisible="{Binding Source={x:Static Application.Current}, Path=IsFormSubmitted, Converter={StaticResource NotConverter}}"
                BackgroundColor="#D32F2F"
                TextColor="White"
                Command="{Binding NavigateCommand}"
                CommandParameter="//MainPage" />
            <Button
                Text="Menu"
                BackgroundColor="#D32F2F"
                TextColor="White"
                Command="{Binding NavigateCommand}"
                CommandParameter="//MenuPage" />
            <Button
                Text="Table"
                BackgroundColor="#D32F2F"
                TextColor="White"
                Command="{Binding NavigateCommand}"
                CommandParameter="//TablePage" />
            <Button
                Text="Order"
                BackgroundColor="#D32F2F"
                TextColor="White"
                Command="{Binding NavigateCommand}"
                CommandParameter="//OrderPage" />
            <Button
                Text="Staff Orders"
                BackgroundColor="#D32F2F"
                TextColor="White"
                Command="{Binding NavigateCommand}"
                CommandParameter="//StaffOrdersPage" />
        </VerticalStackLayout>

        <!-- Main Content -->
        <Grid
            Grid.Column="1"
            Padding="15"
            RowDefinitions="Auto, Auto, *"
            RowSpacing="15">
            <Label
                Grid.Row="0"
                FontAttributes="Bold"
                FontSize="22"
                Text="Menu" />

            <!-- Categories -->
            <HorizontalStackLayout
                Grid.Row="1"
                Spacing="10">
                <Button
                    Text="All"
                    BackgroundColor="#D32F2F"
                    TextColor="White"
                    Command="{Binding SelectCategoryCommand}"
                    CommandParameter="All" />
                <Button
                    Text="Appetizer"
                    BackgroundColor="#D32F2F"
                    TextColor="White"
                    Command="{Binding SelectCategoryCommand}"
                    CommandParameter="Appetizer" />
                <Button
                    Text="Main Course"
                    BackgroundColor="#D32F2F"
                    TextColor="White"
                    Command="{Binding SelectCategoryCommand}"
                    CommandParameter="Main Course" />
                <Button
                    Text="Fast Food"
                    BackgroundColor="#D32F2F"
                    TextColor="White"
                    Command="{Binding SelectCategoryCommand}"
                    CommandParameter="Fast Food" />
                <Button
                    Text="Snacks"
                    BackgroundColor="#D32F2F"
                    TextColor="White"
                    Command="{Binding SelectCategoryCommand}"
                    CommandParameter="Snacks" />
                <Button
                    Text="Dessert"
                    BackgroundColor="#D32F2F"
                    TextColor="White"
                    Command="{Binding SelectCategoryCommand}"
                    CommandParameter="Dessert" />
                <Button
                    Text="Beverages"
                    BackgroundColor="#D32F2F"
                    TextColor="White"
                    Command="{Binding SelectCategoryCommand}"
                    CommandParameter="Beverages" />
            </HorizontalStackLayout>

            <!-- Food Items -->
            <ScrollView Grid.Row="2">
                <CollectionView ItemsSource="{Binding FilteredFoodItems}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:FoodItem">
                            <Grid
                                Padding="10"
                                ColumnDefinitions="*, Auto"
                                RowDefinitions="Auto, Auto, Auto">
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Text="{Binding Name}"
                                    FontAttributes="Bold"
                                    FontSize="16" />
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Text="{Binding Description}"
                                    FontSize="14"
                                    TextColor="Gray" />
                                <Label
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Text="{Binding Price, StringFormat='{0:C}'}"
                                    FontSize="14" />
                                <Button
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Grid.RowSpan="3"
                                    Text="Add to Order"
                                    BackgroundColor="#D32F2F"
                                    TextColor="White"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MenuPageViewModel}}, Path=AddToOrderCommand}"
                                    CommandParameter="{Binding .}" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </ScrollView>
        </Grid>

        <!-- Right Sidebar (Order Summary) -->
        <Grid
            Grid.Column="2"
            Padding="0,10"
            BackgroundColor="#FAF1E6"
            RowDefinitions="Auto, *">
            <Label
                Grid.Row="0"
                FontAttributes="Bold"
                FontSize="25"
                HorizontalOptions="Center"
                Text="Your Order"
                TextColor="Black" />

            <Grid
                Grid.Row="1"
                Padding="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Order Items -->
                <ScrollView Grid.Row="0">
                    <CollectionView ItemsSource="{Binding OrderItems}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:FoodItem">
                                <Grid
                                    Padding="5"
                                    ColumnDefinitions="*, Auto, Auto"
                                    RowDefinitions="Auto, Auto">
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Text="{Binding Name}"
                                        FontAttributes="Bold" />
                                    <Label
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Text="{Binding Price, StringFormat='{0:C}'}"
                                        TextColor="Gray" />
                                    <Stepper
                                        x:Name="QuantityStepper"
                                        Grid.Row="0"
                                        Grid.RowSpan="2"
                                        Grid.Column="1"
                                        Value="{Binding Quantity}"
                                        Minimum="0"
                                        Maximum="10"
                                        ValueChanged="OnQuantityChanged" />
                                    <Button
                                        Grid.Row="0"
                                        Grid.RowSpan="2"
                                        Grid.Column="2"
                                        Text="X"
                                        BackgroundColor="#D32F2F"
                                        TextColor="White"
                                        WidthRequest="30"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MenuPageViewModel}}, Path=UpdateQuantityCommand}"
                                        CommandParameter="{Binding .}" />
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </ScrollView>

                <!-- Notes -->
                <Label
                    Grid.Row="1"
                    Text="Add Notes"
                    FontAttributes="Bold" />
                <Editor
                    Grid.Row="2"
                    Text="{Binding OrderNotes}"
                    HeightRequest="100"
                    Placeholder="Add any special requests" />

                <!-- Place Order -->
                <Button
                    Grid.Row="3"
                    Text="Place Order"
                    BackgroundColor="#D32F2F"
                    TextColor="White"
                    Command="{Binding PlaceOrderCommand}" />
            </Grid>
        </Grid>
    </Grid>
</ContentPage>